source 'https://rubygems.org'

ruby '2.2.3'

gem 'coffee-rails', '~> 4.1.0'
gem 'puma'
gem 'rails', '4.2.0'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'

# style stuff

gem 'bootstrap-sass', '~> 3.3'
gem 'devise', '~> 3.4.1'
gem 'font-awesome-rails', '~> 4.3'
gem 'jbuilder', '~> 2.0'
gem 'jquery-rails'
gem 'simple_form', '~> 3.1.0'
# Turbolinks
gem 'turbolinks'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

group :development do
  gem 'foreman'
  gem 'rubocop'
  gem 'web-console', '~> 2.0'
end

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a console
  gem 'byebug'
  gem 'dotenv-rails'
  gem 'rspec-rails'
  gem 'spring'
  gem 'sqlite3'
end

group :test do
  gem 'capybara', '~> 2.4'
  gem 'factory_girl_rails', '~> 4.5'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end
